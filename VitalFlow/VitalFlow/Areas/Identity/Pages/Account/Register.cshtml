@page
@model VitalFlow.Areas.Identity.Pages.Account.RegisterModel
@{
    ViewData["Title"] = "Register";
}

<h1>@ViewData["Title"]</h1>

<h4>Create a new account.</h4>
<hr />
<div class="row">
    <div class="col-md-6">
        <form method="post">
            <h2>@Model.ReturnUrl</h2>
            <div asp-validation-summary="All" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Input.ImeIPrezime" class="control-label"></label>
                <input asp-for="Input.ImeIPrezime" class="form-control" />
                <span asp-validation-for="Input.ImeIPrezime" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Input.Email" class="control-label"></label>
                <input asp-for="Input.Email" class="form-control" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Input.Password" class="control-label"></label>
                <input asp-for="Input.Password" class="form-control" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Input.ConfirmPassword" class="control-label"></label>
                <input asp-for="Input.ConfirmPassword" class="form-control" />
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Input.BrojTelefona" class="control-label"></label>
                <input asp-for="Input.BrojTelefona" class="form-control" />
                <span asp-validation-for="Input.BrojTelefona" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Input.DatumRođenja" class="control-label"></label>
                <input asp-for="Input.DatumRođenja" class="form-control" type="date" />
                <span asp-validation-for="Input.DatumRođenja" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Input.Jmbg" class="control-label"></label>
                <input asp-for="Input.Jmbg" class="form-control" />
                <span asp-validation-for="Input.Jmbg" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Input.KrvnaGrupa" class="control-label"></label>
                <select asp-for="Input.KrvnaGrupa" class="form-control">
                    @foreach (var value in Enum.GetValues(typeof(VitalFlow.Models.KrvnaGrupa)))
                    {
                        <option value="@value">@value</option>
                    }
                </select>
                <span asp-validation-for="Input.KrvnaGrupa" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-primary">Register</button>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Login">Already have an account? Log in.</a>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
