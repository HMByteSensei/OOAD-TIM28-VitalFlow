@model IEnumerable<VitalFlow.Models.Zahtjev>

@{
    ViewData["Title"] = "Index";
}
<style>
    .custom-table-wrapper {
        border: 2px solid black;
        padding: 10px;
        backdrop-filter: blur(10px);
        border-radius: 10px;
        background-color: rgba(0, 0, 0, 0.7); /* Transparent background */
        color: white; /* White text */
    }

        .custom-table-wrapper .table {
            color: white; /* White text inside the table */
        }

        

    h1 {
        color: black;
        text-align: center;
    }
</style>
<h1>Index</h1>

<div class="custom-table-wrapper">
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.kolicina)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.opis)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.krvnaGrupa)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.kolicina)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.krvnaGrupa)
                </td>
            <td>
                @Html.DisplayFor(modelItem => item.opis)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.zahtjevID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.zahtjevID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.zahtjevID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
</div>
